<view class="top-box">
  <view > Hello!</view>
  <view class="next-text">欢迎使用Fzuer协创圈！</view>
</view>
<!-- 登录、注册 -->
<view class="center-box">
  <view class="nav">
    <view class="left {{current==1?'select':''}}" bindtap="click" data-code="1">
      <button>登录</button>
    </view>
    <view class="right {{current==0?'select':''}}" bindtap="click" data-code="0">
      <button>注册</button>
    </view>
  </view>
  <!-- 登录 -->
  <view class="input-box" hidden="{{current==0}}">
    <view class="wei-input">
      <icon type="waiting" color="#44ADFB" size="16"></icon>
      <input class="input" bindinput="bindAccountInput" auto-focus placeholder="请输入学号/职工号"/>
    </view>
    <view class="wei-input">
      <icon type="info" color="#44ADFB" size="16"></icon>
      <input class="input" type="password" bindinput="bindPasswordInput" auto-focus placeholder="请输入登录密码"/>
    </view>
    <view class="forget">
      <button bind:tap="forgetnum">忘记密码?</button>
    </view>
  </view>
  <!-- 注册 -->
  <view class="input-box" hidden="{{current==1}}">
    <view class="wei-input">
      <icon type="waiting" color="#44ADFB" size="16"></icon>
      <input class="input" bindinput="bindstuid" auto-focus placeholder="请输入学号/职工号"/>
    </view>
    <view class="wei-input">
      <icon type="success" color="#44ADFB" size="16"></icon>
      <input class="input" bindinput="bindtelepnum" auto-focus placeholder="请输入手机号"/>
    </view>
    <view class="wei-input">
      <icon type="warn" color="#44ADFB" size="16"></icon>
      <input class="input" bindinput='bindcaptcha' auto-focus placeholder="请输入验证码"/>
      <text class="input-code" bindtap="getCode">{{codeText}}</text>
    </view>
    <view class="wei-input">
      <icon type="success" color="#44ADFB" size="16"></icon>
      <input class="input" type="password" bindinput="bindpswd" auto-focus placeholder="请输入密码"/>
    </view>
    <view class="wei-input">
      <icon type="success" color="#44ADFB" size="16"></icon>
      <input class="input" type="password" bindinput="bindconpaswd" auto-focus placeholder="请确认密码"/>
    </view>
    <view class="wei-input">
      <checkbox checked="{{checkboxValue}}"  bindtap="handleCheckboxChange">我同意相关条款</checkbox>
    </view>
  </view>
  <view class="sumbit-btn">
    <button class="button" 
    style="background-color: #33ccff;font-size: 30rpx;" 
    type="primary" bindtap="handleTap" data-current="{{current}}">立即{{current==1?'登录':'注册'}}</button>
  </view>
</view>
<!-- 重影 -->
<view class="shadow shadow-1"></view><view class="shadow shadow-2"></view>
